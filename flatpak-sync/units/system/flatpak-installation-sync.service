[Unit]
Description=Manage system defined flatpaks
Wants=network-online.target
After=network-online.target
StartLimitBurst=10
StartLimitIntervalSec=60min

[Service]
Type=oneshot
ExecCondition=/bin/bash -c '[[ "$(busctl get-property org.freedesktop.NetworkManager /org/freedesktop/NetworkManager org.freedesktop.NetworkManager Metered | cut -c 3-)" == @(2|4) ]]'
ExecStart=/usr/bin/flatpak-installation-sync install
Restart=on-failure
RestartSec=20s

[Install]
WantedBy=multi-user.target
